@page "/todoV"
@inject ToDoVM VM
<h3>ToDoView</h3>
<div class="container">

    

    <div class="row">
        <div class="col-12 col-md-6">
            <ul class="list-group">
                <li class="list-group-item active">Todo</li>
                <Virtualize Items="@VM.ToDoList" Context="item" OverscanCount="5" ItemSize="35">
               
                    <li class='list-group-item
                            @(item.completed ? "list-group-item-dark" : "")'>
                        @item.todo
                    </li>
               </Virtualize>
            </ul>
        </div>
    </div>
</div>
